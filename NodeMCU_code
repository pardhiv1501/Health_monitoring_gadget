#include <Wire.h>
#include <ESP8266WiFi.h>
#include <WiFiManager.h>
#include <Adafruit_MLX90614.h>
Adafruit_MLX90614 mlx = Adafruit_MLX90614();
WiFiServer server(80);
int count1 = 3,count2 = 3,count3 = 3,count4 = 3,count5 = 3,count6 = 3;

const int ActivateSwitch = D4;  //send data to server only when this switch is high

int tval;
const int pulse=A0;

void setup() {
  // Open serial communications and wait for port to open:
  Serial.begin(9600);
  pinMode(pulse,INPUT);
  pinMode(ActivateSwitch,INPUT);
  mlx.begin();
}
float farh;
void loop() { 
  float farh = mlx.readObjectTempF();
  string puls=string(analogRead(pulse));
  String t = String(farh);
  Serial.print(t);
  Serial.print(puls);
}

